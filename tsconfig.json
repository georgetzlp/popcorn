{
  "compilerOptions": {
    "downlevelIteration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "esnext",
    "outDir": "./dist",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@common/*": [
        "src/common/*"
      ],
      "@constants": [
        "src/common/constants"
      ],
    },
  },
  "include": [
    "src/**/*.ts",
    "types.d.ts",
    "types/*.d.ts"
  ]
}
