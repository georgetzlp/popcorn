{
  "name": "popcorn",
  "private": true,
  "version": "0.5.1",
  "license": "GPL-3.0-or-later",
  "description": "Another theming extension.",
  "main": "./main.js",
  "author": {
    "name": "wathhr",
    "url": "https://github.com/wathhr"
  },
  "homepage": "https://github.com/wathhr/popcorn",
  "repository": "https://github.com/wathhr/popcorn",
  "readme": "https://github.com/wathhr/popcorn/blob/main/README.md",
  "bugs": {
    "url": "https://github.com/wathhr/popcorn/issues"
  },
  "scripts": {
    "lint": "eslint ./src ./types",
    "lint:ext:mv2": "web-ext lint -s ./dist/browser-mv2",
    "lint:ext:mv3": "web-ext lint -s ./dist/browser-mv3",
    "check": "run-s check:*",
    "check:electron": "tsc --noEmit --project ./src/electron/main/tsconfig.json && tsc --noEmit --project ./src/electron/preload/tsconfig.json",
    "check:browser": "tsc --noEmit --project ./src/browser/tsconfig.json",
    "build": "deno run --allow-all scripts/build/cli.mts",
    "watch": "deno run --allow-all scripts/build/cli.mts --watch --dev",
    "start:firefox:mv2": "web-ext run --source-dir ./dist/browser-mv2/ --browser-console --devtools",
    "start:firefox:mv3": "web-ext run --source-dir ./dist/browser-mv3/ --browser-console --devtools",
    "start:chrome:mv2": "web-ext run --source-dir ./dist/browser-mv2/ -t chromium --browser-console --devtools",
    "start:chrome:mv3": "web-ext run --source-dir ./dist/browser-mv3/ -t chromium --browser-console --devtools"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.19.2",
    "@types/chrome": "^0.0.266",
    "@types/node": "^18.19.33",
    "@types/semver": "^7.5.8",
    "@types/webextension-polyfill": "^0.10.7",
    "electron": "28.2.10",
    "electron-latest": "npm:electron@30.0.1",
    "eslint": "^9.4.0",
    "npm-run-all": "^4.1.5",
    "type-fest": "^4.18.3",
    "typescript": "^5.4.5",
    "web-ext": "^7.12.0"
  },
  "dependencies": {
    "@sinclair/typebox": "^0.32.31",
    "core-js": "^3.37.1",
    "semver": "^7.6.2",
    "webextension-polyfill": "^0.11.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "node-fetch": "*",
        "eslint": ">=8"
      }
    },
    "patchedDependencies": {
      "electron@30.0.1": "patches/electron@30.0.1.patch",
      "electron@28.2.10": "patches/electron@28.2.10.patch"
    }
  },
  "packageManager": "pnpm@9.0.6",
  "engines": {
    "pnpm": ">=8"
  },
  "browserslist": {
    "production": [
      "> 0.3% and not dead",
      "not Safari > 0",
      "not Android > 0",
      "not ChromeAndroid > 0",
      "not Samsung > 0",
      "not OperaMobile > 0",
      "not iOS > 0"
    ],
    "electron-renderer": [
      "electron >= 28"
    ],
    "electron-main": [
      "node >= 18"
    ]
  }
}
