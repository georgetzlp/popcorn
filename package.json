{
  "license": "GPL-3.0-or-later",
  "private": true,
  "type": "module",
  "scripts": {
    "lint": "eslint .",
    "types": "node scripts/types.js",
    "check:all": "run-s check:!(all)",
    "check:main": "tsc --noEmit --project ./src/main/tsconfig.json",
    "check:preload": "tsc --noEmit --project ./src/preload/tsconfig.json",
    "check:renderer": "svelte-check --workspace ./src/renderer --tsconfig ./tsconfig.json",
    "devserver": "node scripts/devserver.js",
    "bundle": "node scripts/bundle.js",
    "build:all": "cross-env NODE_ENV=production node scripts/bundle.js --types=all --minify",
    "build:main": "cross-env NODE_ENV=production node scripts/bundle.js --types=main --minify",
    "build:preload": "cross-env NODE_ENV=production node scripts/bundle.js --types=preload --minify",
    "build:renderer": "cross-env NODE_ENV=production node scripts/bundle.js --types=renderer --minify",
    "watch:all": "cross-env NODE_ENV=development node scripts/bundle.js --types=all --watch",
    "watch:main": "cross-env NODE_ENV=development node scripts/bundle.js --types=main --watch",
    "watch:preload": "cross-env NODE_ENV=development node scripts/bundle.js --types=preload --watch",
    "watch:renderer": "cross-env NODE_ENV=development node scripts/bundle.js --types=renderer --watch"
  },
  "devDependencies": {
    "@types/node": "^20.4.2",
    "@types/ws": "^8.5.5",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.18.15",
    "esbuild-svelte": "^0.7.4",
    "eslint": "^8.45.0",
    "npm-run-all": "^4.1.5",
    "svelte-check": "^3.4.6",
    "typescript": "^5.1.6",
    "ws": "^8.13.0"
  },
  "dependencies": {
    "auto-bind": "^5.0.1",
    "chokidar": "^3.5.3",
    "fast-glob": "^3.3.0",
    "svelte": "^4.1.1",
    "svelte-preprocess": "^5.0.4"
  },
  "optionalDependencies": {
    "w3c-css-validator": "^1.3.1"
  }
}
