{
  "name": "popcorn",
  "private": true,
  "version": "0.1.0",
  "license": "GPL-3.0-or-later",
  "description": "Another theming extension.",
  "author": {
    "name": "wathhr",
    "url": "https://github.com/wathhr"
  },
  "homepage": "https://github.com/wathhr/popcorn",
  "repository": "https://github.com/wathhr/popcorn",
  "readme": "https://github.com/wathhr/popcorn/blob/main/README.md",
  "bugs": {
    "url": "https://github.com/wathhr/popcorn/issues"
  },
  "scripts": {
    "lint": "eslint .",
    "lint:ext": "web-ext lint -s ./dist/browser",
    "types": "deno run --allow-net --allow-read --allow-write scripts/types.mts",
    "check": "run-s check:*",
    "check:main": "tsc --noEmit --project ./src/main/tsconfig.json",
    "check:preload": "tsc --noEmit --project ./src/preload/tsconfig.json",
    "check:renderer": "tsc --noEmit --project ./src/renderer/tsconfig.json",
    "check:browser": "tsc --noEmit --project ./src/browser/tsconfig.json",
    "build": "deno run --allow-env --allow-run --allow-read --allow-write scripts/build.mts",
    "watch": "deno run --allow-env --allow-run --allow-read --allow-write --allow-net=0.0.0.0:7331 scripts/build.mts --watch --dev",
    "start:firefox": "web-ext run --source-dir ./dist/browser/ --browser-console --devtools",
    "start:chrome": "web-ext run --source-dir ./dist/browser/ -t chromium --browser-console --devtools",
    "postinstall": "npm run types"
  },
  "devDependencies": {
    "@sinclair/typebox": "^0.32.14",
    "@types/chrome": "^0.0.260",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.20",
    "@types/semver": "^7.5.7",
    "@types/webextension-polyfill": "^0.10.7",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "eslint": "^8.56.0",
    "fs-extra": "^11.2.0",
    "npm-run-all": "^4.1.5",
    "semver": "^7.6.0",
    "supports-color": "^9.4.0",
    "typescript": "^5.3.3",
    "web-ext": "^7.11.0",
    "webextension-polyfill": "^0.10.0"
  }
}
