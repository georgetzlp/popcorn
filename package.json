{
  "name": "popcorn",
  "private": true,
  "version": "0.1.0",
  "license": "GPL-3.0-or-later",
  "description": "Another theming extension.",
  "author": {
    "name": "wathhr",
    "url": "https://github.com/wathhr"
  },
  "homepage": "https://github.com/wathhr/popcorn",
  "repository": "https://github.com/wathhr/popcorn",
  "readme": "https://github.com/wathhr/popcorn/blob/main/README.md",
  "bugs": {
    "url": "https://github.com/wathhr/popcorn/issues"
  },
  "scripts": {
    "lint": "eslint .",
    "lint:ext": "web-ext lint -s ./dist/browser",
    "types": "node scripts/types.mjs",
    "schema": "run-s schema:*",
    "schema:theme": "ts-json-schema-generator --path types/exports.ts --type Theme --no-type-check -o ./dist/manifest.json",
    "schema:config": "ts-json-schema-generator --path types/exports.ts --type Config --no-type-check -o ./dist/config.json",
    "check": "run-s check:*",
    "check:main": "tsc --noEmit --project ./src/main/tsconfig.json",
    "check:preload": "tsc --noEmit --project ./src/preload/tsconfig.json",
    "check:renderer": "svelte-check --workspace ./src/renderer --tsconfig ./tsconfig.json",
    "devserver": "node scripts/devserver.mjs",
    "build": "node scripts/build.mjs",
    "build:browser": "cross-env NODE_ENV=production BROWSER=true node scripts/build.mjs -t browser --minify",
    "build:kernel": "cross-env NODE_ENV=production node scripts/build.mjs -t kernel --minify",
    "watch:browser": "cross-env NODE_ENV=development BROWSER=true node scripts/build.mjs -t browser --watch",
    "watch:kernel": "cross-env NODE_ENV=development node scripts/build.mjs -t kernel --watch",
    "start:firefox": "web-ext run --source-dir ./dist/browser/ --browser-console",
    "start:chrome": "web-ext run --source-dir ./dist/browser/ -t chromium --browser-console"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.256",
    "@types/node": "^20.11.6",
    "@types/semver": "^7.5.6",
    "@types/webextension-polyfill": "^0.10.7",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "auto-bind": "^5.0.1",
    "chokidar": "^3.5.3",
    "cross-env": "^7.0.3",
    "deepmerge": "^4.3.1",
    "esbuild": "^0.19.12",
    "eslint": "^8.56.0",
    "npm-run-all": "^4.1.5",
    "semver": "^7.5.4",
    "svelte": "^4.2.9",
    "svelte-check": "^3.6.3",
    "ts-json-schema-generator": "^1.5.0",
    "typescript": "^5.3.3",
    "web-ext": "^7.11.0",
    "webextension-polyfill": "^0.10.0",
    "ws": "^8.16.0"
  },
  "optionalDependencies": {
    "w3c-css-validator": "^1.3.2"
  }
}
