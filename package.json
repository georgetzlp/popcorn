{
  "scripts": {
    "bundle": "node scripts/bundle.mjs",
    "build:main": "node scripts/bundle.mjs --type=main --minify",
    "build:preload": "node scripts/bundle.mjs --type=preload --minify",
    "build:renderer": "node scripts/bundle.mjs --type=renderer --minify",
    "build:all": "run-s build:!(all)",
    "watch:main": "node scripts/bundle.mjs --type=main --watch",
    "watch:preload": "node scripts/bundle.mjs --type=preload --watch",
    "watch:renderer": "node scripts/bundle.mjs --type=renderer --watch",
    "watch:all": "run-p watch:!(all)"
  },
  "devDependencies": {
    "@types/node": "^18.14.6",
    "esbuild": "^0.17.11",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "fast-glob": "^3.2.12"
  }
}
