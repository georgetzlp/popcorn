{
  "scripts": {
    "build:main": "webpack --progress --env=type=main --env=minify=true",
    "build:preload": "webpack --progress --env=type=preload --env=minify=true",
    "build:renderer": "webpack --progress --env=type=renderer --env=minify=true",
    "build:all": "run-s build:!(all)",
    "watch:main": "webpack --progress --env=type=main --env=minify=false --watch",
    "watch:preload": "webpack --progress --env=type=preload --env=minify=false --watch",
    "watch:renderer": "webpack --progress --env=type=renderer --env=minify=false --watch",
    "watch:all": "run-p watch:!(all)"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.5",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  }
}
