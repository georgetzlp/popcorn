{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ESNext",

    "lib": [
      "DOM",
      "ESNext",
    ],
    "types": [
      "../../globals.d.ts",
      "./globals.d.ts"
    ],

    "paths": {
      "~/": ["."],
      "~/*": ["./*"],
      "#common": [
        "../common",
        "./common",
      ],
      "#common/*": [
        "../common/*",
        "./common/*",
      ],
    },
  }
}
