{
  "extends": "../../tsconfig.json",
  "include": ["./**/*.ts"],
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",

    "lib": [
      "DOM",
      "ESNext",
    ],

    "types": [
      "./globals.d.ts",
      "../../types/globals.d.ts",
      "../../types/kernel.d.ts",
    ],

    "paths": {
      "~": ["../.."],
      "~/*": ["../../*"],
      "#": ["."],
      "#/*": ["./*"],
      "&/*": ["../*"],
    },
  },
}
