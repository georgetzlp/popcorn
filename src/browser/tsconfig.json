{
  "extends": "../electron/renderer/tsconfig.json",
  "include": ["./**/*.ts", "./**/*.mts"],
  "compilerOptions": {
    "types": [
      "@types/chrome",
      "./globals.d.ts",
      "../../types/globals.d.ts",
    ],

    "paths": {
      "~": ["../.."],
      "~/*": ["../../*"],
      "#": [".", "../electron/renderer"],
      "#/*": ["./*", "../electron/renderer/*"],
      "#shared": ["../#shared"],
      "#shared/*": ["../#shared/*"],
      "#types": ["../types"],
      "#types/*": ["../types/*"],
    },
  },
}
