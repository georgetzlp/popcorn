{
  "extends": "../../tsconfig.json",
  "include": ["./**/*.ts"],
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ESNext",

    "lib": [
      "DOM",
      "ESNext",
    ],

    "types": [
      "./globals.d.ts",
      "../../types/globals.d.ts",
      "../../types/kernel.d.ts",
    ],

    "paths": {
      "~": ["../.."],
      "~/*": ["../../*"],
      "#": ["."],
      "#/*": ["./*"],
      "#shared": ["../#shared"],
      "#shared/*": ["../#shared/*"],
      "#types": ["../types"],
      "#types/*": ["../types/*"],
    },
  },
}
