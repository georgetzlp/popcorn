{
  "extends": "../renderer/tsconfig.json",
  "include": ["./**/*.ts"],
  "compilerOptions": {
    "types": [
      "@types/chrome",
      "./globals.d.ts",
      "../../types/globals.d.ts",
    ],

    "paths": {
      "~": ["../.."],
      "~/*": ["../../*"],
      "#": [".", "../renderer"],
      "#/*": ["./*", "../renderer/*"],
      "#shared": ["../shared"],
      "#shared/*": ["../shared/*"],
      "#types": ["../types"],
      "#types/*": ["../types/*"],
    },
  },
}
