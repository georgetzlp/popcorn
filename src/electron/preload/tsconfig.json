{
  "extends": "../../../tsconfig.json",
  "include": ["./**/*.ts", "../renderer/common/logger.ts"],
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ESNext",

    "lib": [
      "DOM",
      "ESNext",
    ],

    "types": [
      "@types/node",
      "../../../types/electron.d.ts",
      "../../../types/globals.d.ts",
    ],

    "paths": {
      "~": ["../../.."],
      "~/*": ["../../../*"],
      "#": ["."],
      "#/*": ["./*"],
      "#shared": ["../../shared"],
      "#shared/*": ["../../shared/*"],
      "#types": ["../../types"],
      "#types/*": ["../../types/*"],
    },
  },
}
