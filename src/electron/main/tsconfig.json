{
  "extends": "../../../tsconfig.json",
  "include": ["./**/*.ts"],
  "compilerOptions": {
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "target": "ESNext",

    "lib": [
      "ESNext",
    ],

    "types": [
      "@types/node",
      "../../../types/globals.d.ts",
    ],

    "paths": {
      "~": ["../../.."],
      "~/*": ["../../../*"],
      "#": ["."],
      "#/*": ["./*"],
      "&/*": ["../../*"],
    },
  },
}
