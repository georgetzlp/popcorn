{
  "extends": "../../../tsconfig.json",
  "include": ["./**/*.ts"],
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",

    "lib": [
      "ESNext",
    ],

    "types": [
      "@types/node",
      "../../../vendor/electron.d.ts",
      "../../../types/globals.d.ts",
    ],

    "paths": {
      "~": ["../../.."],
      "~/*": ["../../../*"],
      "#": ["."],
      "#/*": ["./*"],
      "#shared": ["../../shared"],
      "#shared/*": ["../../shared/*"],
      "#types": ["../../types"],
      "#types/*": ["../../types/*"],
    },
  },
}
