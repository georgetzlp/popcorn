{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ESNext",

    "lib": [
      "ESNext",
    ],

    "types": [
      "../../types/electron.d.ts",
      "../../globals.d.ts",
      "../../types/kernel.d.ts",
    ],

    "paths": {
      "~/": ["."],
      "~/*": ["./*"],
      "#common": [
        "../common",
        "./common",
      ],
      "#common/*": [
        "../common/*",
        "./common/*",
      ],
    },
  }
}
